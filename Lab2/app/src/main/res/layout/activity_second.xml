<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF6F0">


    <!-- Список выбранных товаров -->
    <ListView
        android:id="@+id/listViewCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="32dp"/>


    <!-- Текстовые поля для подсчета элементов и суммы -->
    <TextView
        android:id="@+id/textViewCartCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checked Items: 0"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewCartSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Sum: $0"
        android:layout_marginTop="8dp" />

    <!-- Кнопка возврата -->
    <Button
        android:backgroundTint="#FF4020"
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Products"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                                 Разработал Лесько М.И."/>
</LinearLayout>